{% assign settings = section.settings %}

<img data-src="{{ settings.desktop_image | img_url: '1920x' }}" width="100%" height="100%" class="d-none d-lg-block img-fluid img-full lazyload" alt="CTA Banner Image">
<img data-src="{{ settings.mob_image | img_url: '450x' }}" width="100%" height="100%" class="d-block d-lg-none img-fluid img-full lazyload" alt="CTA Banner Image">

<div class="content">
    {% if settings.title != empty %}
        <h2 class="m-0 mb-3">{{ settings.title }}</h2>
    {% endif %}
    {% if settings.copy != empty %}
        <p>{{ settings.copy }}</p>
    {% endif %}
    {% if settings.banner_link != empty and settings.banner_link_text != empty%}
        <a href="{{ settings.banner_link }}" class="btn btn-primary">{{ settings.banner_link_text }}</a>
    {% endif %}
  	<div class="m-hide">
    {% if settings.klaviyo_code != empty %}
        {{ settings.klaviyo_code }}
    {% endif %}
  	</div>
  	<div class="d-hide">
    {% if settings.klaviyo_code_mobile != empty %}
        {{ settings.klaviyo_code_mobile }}
    {% endif %}
  	</div>
  
</div>