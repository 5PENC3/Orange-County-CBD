{% include 'breadcrumbs-container' %}

<div class="container">
    <div class="mt-3 row mt-lg-5">
        <div class="col-12 col-md-9 mx-auto">
            <div class="row no-gutters">
                <div class="pb-3 col-12">
                    <header>
                        <h1 class="mt-0">{{ page.title }}</h1>
                    </header>
                    <div class="rte">
                        {{page.content}}
                    </div>
                </div>
                <div class="col-12">
                    <div class="accordion-container">
                        {% for tab in section.blocks %}
                            <div class="accordion-item {% if forloop.first == true %}active{% endif %}">
                                <div class="accordion-title">
                                    <h3>{{ tab.settings.tab_title }}</h3>
                                    <div class="plus-minus-icon"></div>
                                </div><!-- accordion-title -->
                                <div class="accordion-content">
                                    <div class="rte">
                                        {{ tab.settings.tab_content }}
                                    </div>
                                </div><!-- accordion-content -->
                            </div><!-- accordion-item -->
                        {% endfor %}
                    </div><!-- accordion-container -->
                </div><!-- col -->
            </div>

        </div>
    </div>
</div>