<div class="container my-3 py-3">
  <div class="row">
      <div class="col-12 col-lg-9 content text-center mx-auto">
        <h1>{{ 'general.search.title' | t }}</h1>
      </div>
  </div>
</div>

<div class="collection-listing">
	<div class="container collection__container search__container">

		<div class="row">

			<div class="col-12">
				<div class="row">
					<div class="col">
					{% if search.performed %}
						<div id="bc-sf-filter-products" class="row collection-view-three">
						{% for product in search.results %}
							{%- comment %}<locksmith:7203>{% endcomment -%}
							  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: search, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
							{%- comment %}</locksmith:7203>{% endcomment -%}
							{% include 'collection-product'%}
						{% else %}
							<p>{{ 'collections.general.no_matches' | t }}</p>
						{% endfor %}
						</div><!-- row -->
					{% else %}
						<p>{{ 'collections.general.no_matches' | t }}</p>
				  {% endif %}
					</div><!-- col -->
				</div><!-- row -->
			</div><!-- col -->
		</div><!-- row -->

	{% include 'collection-bottom-pagination' %}
	</div><!-- container-fluid -->

</div><!-- Collection Listing -->

