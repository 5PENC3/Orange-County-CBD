
	<div class="container-fluid text-three-logos text-center">
		<div class="row">
			<div class="col-12">
				{% if section.settings.featured_text != empty %}
					<p> {{section.settings.featured_text}} </p>
				{% endif %}
				<div class="images pt-2">
					{% for block in section.blocks %}
						{% case block.type %}
							{% when 'logos' %}
							<div class="holder">
								<img class="img-fluid lazyload" width="100%" height="100%" src="{{ block.settings.image | img_url: 'master' }}" alt="">
							</div>
						{% endcase %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>


{% schema %}
{
    "name": "Text + Three Logos",
    "settings": [
		{
			"type": 	"header",
			"content": 	"Featured On Area"
		},
		{
			"type":	  "text",
			"id":     "featured_text",
			"label":  "Featured Text"
		}
    ],
    "blocks": [
		{
			"type": "logos",
			"name": "Logos",
			"limit": 3,
			"settings": [
				{
					"type": "image_picker",
					"id": 	"image",
					"label": "Image"
				}
			]
		}
	],
	"presets": [
    {
      "name":       "Text + Three Logos",
      "category":   "Content"
    }
  ]
}
{% endschema %}