<div class="container mb-5 pb-5 about__intro">
    <div class="row">
        <div class="col-12 col-lg-9 content text-center mx-auto">
            <h1>{{ page.title }}</h1>
            {{ page.content }}
        </div>
    </div>
</div>

<div class="container-fluid p-0">

    {% for block in section.blocks %}
        {% if block.type == 'video_player' %}
            <div class="container py-5 my-5">{% include 'video-player' %}</div>
        {% endif %}

        {% if block.type == 'text_with_image' %}
            {% include 'text-with-image' %}
        {% endif %}

        {% if block.type == 'title' %}
            <div class="text-center container pb-5 mb-5">
                <{{block.settings.title_tag}} class="m-0">
                    {% capture oc_cbd %}
                        <span class="text-primary">Orange County CBD</span>
                    {% endcapture %}
                    {{ block.settings.title_content | replace: "Orange County CBD", oc_cbd }}
                </{{block.settings.title_tag}}>
            </div>
        {% endif %}
    {% endfor %}

</div>

{% schema %}
{
    "name": "About Us",
    "blocks": [
        {
            "type": "video_player",
            "name": "Video Player",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "video_poster",
                    "label": "Video Poster"
                },
                {
                    "type":     "text",
                    "id":       "video_source",
                    "label":    "Video URL"
                },
                {
                    "type":     "checkbox",
                    "id":       "video_loop",
                    "default":  true,
                    "label":    "Loop Video?"
                },
                {
                    "type":     "checkbox",
                    "id":       "video_autoplay",
                    "default":  true,
                    "label":    "Autoplay video?"
                },
                {
                    "type":     "checkbox",
                    "id":       "video_controls",
                    "default":  true,
                    "label":    "Show video controls?"
                }
            ]
        },
        {
			"type": "text_with_image",
			"name": "Text With Image",
            "settings": [
                {
                    "type": 	"header",
                    "content": 	"Image Options"
                },
                {
                    "type":      "select",
                    "id":        "image_position",
                    "label":     "Image Position",
                    "info":      "Will stack as normal on mobile",
                    "options": [
                        {
                            "value": "flex-row",
                            "label": "Left"
                        },
                        {
                            "value": "flex-row-reverse",
                            "label": "Right"
                        }
                    ],
                    "default":   "flex-row"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image - Desktop",
                    "info": "Optimal image size: 720 x 500"
                },
                {
                    "type": "image_picker",
                    "id": "image_mob",
                    "label": "Image - Mobile",
                    "info": "Optimal image size: 420 x 285"
                },
                {
                    "type": 	"header",
                    "content": 	"Content Options"
                },
                {
                    "type":     "text",
                    "id":       "number",
                    "label":    "Number"
                },
                {
                    "type":     "text",
                    "id":       "heading",
                    "label":    "Heading"
                },
                {
                    "type":     "richtext",
                    "id":       "copy",
                    "label":    "Copy"
                }
            ]
        },
        {
			"type": "title",
			"name": "Title",
            "settings": [
                {
                    "type": "textarea",
                    "id": "title_content",
                    "label": "Title Content"
                },
                {
                    "type": "select",
                    "id": "title_tag",
                    "label": "Title tag",
                    "options": [
                        {
                            "value": "h2",
                            "label": "h2"
                        },
                        {
                            "value": "h3",
                            "label": "h3"
                        },
                        {
                            "value": "h4",
                            "label": "h4"
                        },
                        {
                            "value": "h5",
                            "label": "h5"
                        },
                        {
                            "value": "h6",
                            "label": "h6"
                        }
                    ]
                }
            ]
        }
    ]
}
{% endschema %}